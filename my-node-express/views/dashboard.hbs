<h1>Dashboard</h1>
<p>Welcome, {{username}}!</p>
<a href="/logout">Logout</a>

{{#if removedReport}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  Report has been removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h1>Reports</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/report/addreport" type="button" class="btn btn-primary align-self-center">+ add report</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Trace ID</th>
      <th scope="col">File ID</th>
      <th scope="col">Switch ID</th>
      <th scope="col">Timestamp</th>
      <th scope="col">File Size</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each reports}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.trace_id}}</td>
      <td>{{this.file_id}}</td>
      <td>{{this.switch_id}}</td>
      <td>{{this.timestamp}}</td>
      <td>{{this.file_size}}</td>
      <td class="text-end">
        <a href="/report/viewreport/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
        <a href="/report/editreport/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a>
        <a href="/report/deletereport/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-trash"></i> Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>
